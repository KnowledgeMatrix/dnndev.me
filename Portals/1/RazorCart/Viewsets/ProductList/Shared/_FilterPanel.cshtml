@inherits DotNetNuke.Web.Mvc.Framework.DnnWebViewPage<RazorCart.ProductList.Models.ListModel>

<div class="well well-sm rzc-filter-panel">
    <div class="form-inline">
        <div class="form-group">
            <label>@Dnn.LocalizeString("DisplayLabel")</label>
            <div class="btn-group">
                <a ng-href="{{'@Model.DisplayURL'.replace('{0}', 'gridview')}}" class="btn btn-default btn-sm" ng-click="!(list.displayMode === 'gridview') && list.changeDisplay($event, 'gridview')" ng-disabled="list.displayMode == 'gridview'">
                    <span class="glyphicon glyphicon-th"></span>
                </a>
                <a ng-href="{{'@Model.DisplayURL'.replace('{0}', 'listview')}}" class="btn btn-default btn-sm" ng-click="!(list.displayMode === 'listview') && list.changeDisplay($event, 'listview')" ng-disabled="list.displayMode == 'listview'">
                    <span class="glyphicon glyphicon-th-list"></span>
                </a>
            </div>
        </div>
        <div class="form-group">
            <div class="dropdown" ng-class="list.sortMenu ? 'open' : ''">
                <button type="button" class="btn btn-default dropdown-toggle" ng-model="list.sortMenu" ng-click="list.sortMenu = !list.sortMenu" ng-blur="list.sortMenu = false">
                    <b>{{(list.sortExpressions | filter: { Key: list.sortExpression })[0].Value}}</b>
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" ng-init="list.sortExpressions = [{ Key: 'order-asc', Value: '@Dnn.LocalizeString("Sort_Default")' }, { Key: 'price-asc', Value: '@Dnn.LocalizeString("Sort_PriceAsc")' }, { Key: 'price-desc', Value: '@Dnn.LocalizeString("Sort_PriceDesc")' }]">
                    <li ng-repeat="sortExpression in list.sortExpressions | filter: { Key: '!' + list.sortExpression }">
                        <a href="#" ng-mousedown="list.sortExpressionChange($event, sortExpression.Key); list.sortMenu = !list.sortMenu">{{sortExpression.Value}}</a>
                    </li>
                </ul>
            </div>
        </div>
