            <input type="search" class="form-control" placeholder="@Dnn.LocalizeString("Search")" ng-model="list.searchText" ng-change="list.enableAutoFiltering && list.applyFilters($event)"
                   ng-model-options="{ debounce: list.autoFilteringTimeout }" ng-keypress="($event.which === 13) && list.applyFilters($event)">
        </div>*@
        @*<div class="form-group">
            <label>@Dnn.LocalizeString("PriceRangeLabel")</label>
            <input type="number" class="form-control" placeholder="@Dnn.LocalizeString("From")" min="0" ng-model="list.minPrice" ng-change="list.enableAutoFiltering && list.applyFilters($event)"
                   ng-model-options="{ debounce: list.autoFilteringTimeout }" ng-keypress="($event.which === 13) && list.applyFilters($event)">
            <input type="number" class="form-control" placeholder="@Dnn.LocalizeString("To")" min="0" ng-model="list.maxPrice" ng-change="list.enableAutoFiltering && list.applyFilters($event)"
                   ng-model-options="{ debounce: list.autoFilteringTimeout }" ng-keypress="($event.which === 13) && list.applyFilters($event)">
        </div>*@
        @*<button class="btn btn-default" ng-click="list.applyFilters($event)">
            <span class="glyphicon glyphicon-filter"></span> @Dnn.LocalizeString("FilterLabel")
        </button>*@
        <div class ="form-group">
            <label>Color:</label>
            <input type="search" class="form-control" placeholder="EnterYourColor"ng-model="list.searchText" ng-change="list.enableAutoFiltering && list.applyFilters($event)"
                   ng-model-options="{ debounce: list.autoFilteringTimeout }" ng-keypress="($event.which === 13) && list.applyFilters($event)">
        </div>
        <div class="form-group">
            <label>Select Size:</label>
            <div class="form-group">
                <div class="dropdown" ng-class="sortSize ? 'open' : ''" ng-init="sortSize=false">
                    <button type="button" class="btn btn-default dropdown-toggle" ng-model="list.sortMenu" ng-click="sortSize = !sortSize" ng-blur="sortSize = false">
                        <b>select size</b>
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" ng-init="list.sortRange = [{ Key: 'M', Value: 'MEDIUM' }, { Key: 'L', Value: 'LARGE' }, { Key: 'XL', Value: 'XTRA LARGE' },{ Key: 'XXL', Value: 'dOUBLEX TRA LARGE' }]">
                        <li ng-repeat="sortExpression in list.sortRange | filter: { Key: '!' + list.sortRange }">
                            <a href="#" ng-mousedown="list.sortExpressionChange($event, sortExpression.Key); list.sortMenu = !list.sortMenu">{{sortExpression.Value}}</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <label>Show Items per Page :</label>
        
        <div class="form-group">
            <div class="dropdown" ng-class="itemsSize ? 'open' : ''" ng-init="itemsSize=false">
                <button type="button" class="btn btn-default dropdown-toggle" ng-model="list.sortMenu" ng-click="itemsSize = !itemsSize" ng-blur="itemsSize = false">
                    <b>select size of items</b>
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" ng-init="list.sortPageSize = [{ Key: '24', Value: '24' },{ Key: '48', Value: '48' }, { Key: 'showAll', Value: 'Show All' }]">
                    <li ng-repeat="sortExpression in list.sortPageSize | filter: { Key: '!' + list.sortPageSize }">
                        <a href="#" ng-mousedown="list.sortExpressionChange($event, sortExpression.Key); list.sortMenu = !list.sortMenu">{{sortExpression.Value}}</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>